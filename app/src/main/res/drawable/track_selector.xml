<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <solid android:color="@color/switchBackground" />
            <stroke android:color="@color/switchBorder" android:width="1dp"/>
            <size android:height="20dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="@color/colorMainLightBlue" />
            <stroke android:color="@color/colorMainLightBlue" android:width="1dp"/>
            <size android:height="20dp" />
        </shape>
    </item>
</selector>